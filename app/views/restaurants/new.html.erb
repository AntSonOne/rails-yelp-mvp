<h1>New restaurant</h1>
  <p>
    <%= simple_form_for [@restaurant] do |f|%>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :category %>
      <%= f.submit "Submit restaurant", class: "btn btn-primary" %>
    <% end %>
  </p>

  <p>
    <%= link_to 'Back to list', restaurants_path(@restaurants), class: "btn btn-success" %>
  </p>
